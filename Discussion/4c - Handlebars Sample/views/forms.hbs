<link rel="stylesheet" href="/css/forms.css">
<h1> Forms Sample </h1>
<form id="postForm" name="postForm">
    <fieldset>
        <legend>Create Post</legend>
        <label> Subject </label>
        <input type="text" name="subject" placeholder="subject">
        <label> Content </label>
        <textarea placeholder="content" name="content"></textarea>
        <button id="postBtn" type="button"> Post </button>
        <button type="reset"> Reset </button>   
    </fieldset>
</form>
<hr />
{{#if posts}}
{{#each posts}}
<div class="posts" id={{this.id}}>
    <p class="date">{{toDate this.epoch_time}}</p>
    <p class="subject">{{this.subject}}</p>
    <p class="content">{{this.content}}</p>
    <p class="like" id={{likeID this.id}}>Like: {{this.like}}</p>
    <button id={{likeBtnID this.id}} onclick="updateLike('{{this.id}}')">Like</button>
    <div style="display:grid;">
        <input style="width:inherit;"type="text" id={{commentFieldID this.id}} />
        <button id={{commentBtnID this.id}} onclick="submitComment('{{this.id}}')">Comment</button>
    </div>
    
</div>
<br>
{{/each}}
{{else}}
<p> No posts to show...</p>
{{/if}}
<script src="/js/forms.js"></script>
<script src="/js/dynamic.js"></script>